#include<bits/stdc++.h>
using namespace std;
int main(){
    int test;
    cin>>test;
    while(test--){
        long long n;
        long long x1,y1,x2,y2;
        cin>>n>>x1>>y1>>x2>>y2;
        int c;
        int d;
        cout<<abs(min(min(x1-1,n-x1),min(y1-1,n-y1))-min(min(x2-1,n-x2),min(y2-1,n-y2)))<<"\n";
    }
    return 0;
}
